@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity
@using BattleBoardGames.Areas.Identity.Data
@inject SignInManager<BattleBoardGamesUser> SignInManager
@inject UserManager<BattleBoardGamesUser> UserManager

<h1>Battle Board Game</h1>

@if (SignInManager.IsSignedIn(User))
{
    <h5>Seja Bem Vindo! - @UserManager.GetUserName(User) </h5>
    <p>Quantidade de Batalhas do Jogador</p><p id="qtdBatalhasJogador"></p>

    <br>
    <p>
        Escolha uma nação:
    </p>
    <form name="selectExercito">
        <div>
            <input id="exercito" type="radio" name="exercito" value="3" />Egito   |
            <input id="exercito" type="radio" name="exercito" value="1" />Indiano |
            <input id="exercito" type="radio" name="exercito" value="2" />Persa  |
            <input id="exercito" type="radio" name="exercito" value="4" />Romano
        </div>
    </form>
    <br>
    <button class="btn btn-primary" onclick="criarJogo()">
        Criar Jogo
    </button>
}
<p>Quantidade de Batalhas Total:</p><p id="qtdBatalhas"></p>

@section Scripts{
    <script src="~/js/batalhas.js"></script>
    <environment include="Development">
        <script src="~/js/batalhas.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/batalhas.min.js"></script>
    </environment>
}
